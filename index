  <script>
    // Variabel global untuk menyimpan data
    let suratJalanFile = null;
    let barangFile = null;
    let suratJalanData = null;
    let barangData = [];
    let barangDiterima = [];
    let nomorSuratJalan = '';
    
    // Event listeners untuk file inputs
    document.getElementById('suratJalanFile').addEventListener('change', function(e) {
      if (e.target.files.length > 0) {
        suratJalanFile = e.target.files[0];
        document.getElementById('suratJalanInfo').innerHTML = 
          `File terpilih: <strong>${suratJalanFile.name}</strong> (${formatFileSize(suratJalanFile.size)})`;
        document.getElementById('uploadSuratJalanBtn').disabled = false;
      }
    });
    
    document.getElementById('barangFile').addEventListener('change', function(e) {
      if (e.target.files.length > 0) {
        barangFile = e.target.files[0];
        document.getElementById('barangInfo').innerHTML = 
          `File terpilih: <strong>${barangFile.name}</strong> (${formatFileSize(barangFile.size)})`;
        document.getElementById('uploadBarangBtn').disabled = false;
      }
    });
    
    // Event listener untuk input barcode - DIPERBAIKI
    document.getElementById('barcode').addEventListener('input', function() {
      const barcode = this.value.trim();
      const namaBarangAuto = document.getElementById('namaBarangAuto');
      const qtySuratJalanInfo = document.getElementById('qtySuratJalanInfo');
      
      // Reset tampilan
      namaBarangAuto.textContent = '-';
      namaBarangAuto.style.color = '#666';
      qtySuratJalanInfo.textContent = '-';
      qtySuratJalanInfo.className = 'qty-info';
      
      if (barcode && barangData.length > 0) {
        // Cari barang berdasarkan barcode
        const barang = barangData.find(item => item.barcode.toLowerCase() === barcode.toLowerCase());
        
        if (barang) {
          namaBarangAuto.textContent = barang.nama;
          namaBarangAuto.style.color = '#4285f4';
          
          // Cari quantity dari surat jalan berdasarkan nama barang
          if (suratJalanData && suratJalanData.length > 0) {
            const barangSJ = suratJalanData.find(sj => 
              sj.nama.toLowerCase() === barang.nama.toLowerCase()
            );
            
            if (barangSJ) {
              const qtySJ = parseInt(barangSJ.qty) || 0;
              qtySuratJalanInfo.textContent = qtySJ;
              
              // Beri warna berdasarkan perbandingan dengan input quantity
              const qtyDiterima = parseInt(document.getElementById('qty').value) || 1;
              
              if (qtyDiterima === qtySJ) {
                qtySuratJalanInfo.className = 'qty-info qty-sesuai';
              } else if (qtyDiterima < qtySJ) {
                qtySuratJalanInfo.className = 'qty-info qty-kurang';
              } else {
                qtySuratJalanInfo.className = 'qty-info qty-lebih';
              }
            } else {
              qtySuratJalanInfo.textContent = 'Tidak ada di surat jalan';
              qtySuratJalanInfo.className = 'qty-info';
            }
          } else {
            qtySuratJalanInfo.textContent = 'Surat jalan belum diupload';
            qtySuratJalanInfo.className = 'qty-info';
          }
        } else {
          namaBarangAuto.textContent = 'Barang tidak ditemukan';
          namaBarangAuto.style.color = '#d32f2f';
        }
      }
    });
    
    // Event listener untuk input quantity - DITAMBAHKAN
    document.getElementById('qty').addEventListener('input', function() {
      // Trigger ulang perhitungan saat quantity berubah
      document.getElementById('barcode').dispatchEvent(new Event('input'));
    });
    
    // Setup drag and drop untuk area upload
    setupDragAndDrop('suratJalanDropArea', 'suratJalanFile', 'suratJalanInfo', 'uploadSuratJalanBtn');
    setupDragAndDrop('barangDropArea', 'barangFile', 'barangInfo', 'uploadBarangBtn');
    
    // Fungsi untuk menampilkan ukuran file
    function formatFileSize(bytes) {
      if (bytes === 0) return '0 Bytes';
      const k = 1024;
      const sizes = ['Bytes', 'KB', 'MB', 'GB'];
      const i = Math.floor(Math.log(bytes) / Math.log(k));
      return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
    }
    
    // Fungsi untuk setup drag and drop
    function setupDragAndDrop(dropAreaId, fileInputId, infoId, buttonId) {
      const dropArea = document.getElementById(dropAreaId);
      const fileInput = document.getElementById(fileInputId);
      const infoElement = document.getElementById(infoId);
      const buttonElement = document.getElementById(buttonId);
      
      ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
        dropArea.addEventListener(eventName, preventDefaults, false);
      });
      
      function preventDefaults(e) {
        e.preventDefault();
        e.stopPropagation();
      }
      
      ['dragenter', 'dragover'].forEach(eventName => {
        dropArea.addEventListener(eventName, highlight, false);
      });
      
      ['dragleave', 'drop'].forEach(eventName => {
        dropArea.addEventListener(eventName, unhighlight, false);
      });
      
      function highlight() {
        dropArea.style.borderColor = '#4285f4';
        dropArea.style.backgroundColor = '#e3f2fd';
      }
      
      function unhighlight() {
        dropArea.style.borderColor = '#ccc';
        dropArea.style.backgroundColor = '#fafafa';
      }
      
      dropArea.addEventListener('drop', handleDrop, false);
      
      function handleDrop(e) {
        const dt = e.dataTransfer;
        const files = dt.files;
        
        if (files.length > 0) {
          fileInput.files = files;
          
          if (fileInputId === 'suratJalanFile') {
            suratJalanFile = files[0];
          } else {
            barangFile = files[0];
          }
          
          infoElement.innerHTML = 
            `File terpilih: <strong>${files[0].name}</strong> (${formatFileSize(files[0].size)})`;
          buttonElement.disabled = false;
          
          // Trigger change event manually
          const event = new Event('change');
          fileInput.dispatchEvent(event);
        }
      }
    }
    
    // Fungsi untuk upload surat jalan
    function uploadSuratJalan() {
      if (!suratJalanFile) {
        showError('suratJalanStatus', 'Pilih file terlebih dahulu');
        return;
      }
      
      showLoading();
      const reader = new FileReader();
      
      reader.onload = function(e) {
        const fileContent = e.target.result;
        
        google.script.run
          .withSuccessHandler(function(response) {
            hideLoading();
            if (response.success) {
              showSuccess('suratJalanStatus', response.message);
              document.getElementById('suratJalanInfo').innerHTML += 
                `<br>${response.data.length} item ditemukan`;
              suratJalanData = response.data;
              nomorSuratJalan = response.nomorSuratJalan;
              
              // Update tampilan jika ada input barcode aktif
              const barcodeInput = document.getElementById('barcode');
              if (barcodeInput.value.trim()) {
                barcodeInput.dispatchEvent(new Event('input'));
              }
            } else {
              showError('suratJalanStatus', response.message);
            }
          })
          .withFailureHandler(function(error) {
            hideLoading();
            showError('suratJalanStatus', 'Error: ' + error.message);
          })
          .prosesSuratJalan(fileContent, suratJalanFile.name);
      };
      
      reader.onerror = function() {
        hideLoading();
        showError('suratJalanStatus', 'Gagal membaca file');
      };
      
      reader.readAsDataURL(suratJalanFile);
    }
    
    // Fungsi untuk upload data barang
    function uploadDataBarang() {
      if (!barangFile) {
        showError('barangStatus', 'Pilih file terlebih dahulu');
        return;
      }
      
      showLoading();
      const reader = new FileReader();
      
      reader.onload = function(e) {
        const fileContent = e.target.result;
        
        google.script.run
          .withSuccessHandler(function(response) {
            hideLoading();
            if (response.success) {
              showSuccess('barangStatus', response.message);
              document.getElementById('barangInfo').innerHTML += 
                `<br>${response.data.length} item diproses`;
              barangData = response.data;
              
              // Update tampilan jika ada input barcode aktif
              const barcodeInput = document.getElementById('barcode');
              if (barcodeInput.value.trim()) {
                barcodeInput.dispatchEvent(new Event('input'));
              }
            } else {
              showError('barangStatus', response.message);
            }
          })
          .withFailureHandler(function(error) {
            hideLoading();
            showError('barangStatus', 'Error: ' + error.message);
          })
          .prosesDataBarang(fileContent, barangFile.name);
      };
      
      reader.onerror = function() {
        hideLoading();
        showError('barangStatus', 'Gagal membaca file');
      };
      
      reader.readAsDataURL(barangFile);
    }
    
    // Fungsi untuk menambahkan barang ke tabel - DIPERBAIKI
    function tambahBarang() {
      const barcode = document.getElementById('barcode').value.trim();
      const namaBarangAuto = document.getElementById('namaBarangAuto').textContent;
      const qty = parseInt(document.getElementById('qty').value);
      const qtySuratJalanText = document.getElementById('qtySuratJalanInfo').textContent;
      
      if (!barcode || namaBarangAuto === '-' || namaBarangAuto === 'Barang tidak ditemukan' || isNaN(qty) || qty <= 0) {
        alert('Isi semua field dengan benar atau pastikan barcode valid');
        return;
      }
      
      // Ambil qty surat jalan
      let qtySuratJalan = 0;
      if (qtySuratJalanText !== '-' && qtySuratJalanText !== 'Tidak ada di surat jalan' && qtySuratJalanText !== 'Surat jalan belum diupload') {
        qtySuratJalan = parseInt(qtySuratJalanText) || 0;
      }
      
      // Cek apakah barang dengan nama yang sama sudah ada di list (meskipun barcode berbeda)
      const existingIndex = barangDiterima.findIndex(item => 
        item.nama.toLowerCase() === namaBarangAuto.toLowerCase()
      );
      
      if (existingIndex >= 0) {
        // Update qty jika barang dengan nama yang sama sudah ada
        barangDiterima[existingIndex].qtyDiterima += qty;
        barangDiterima[existingIndex].selisih = barangDiterima[existingIndex].qtyDiterima - qtySuratJalan;
        
        // Tambahkan barcode baru ke daftar barcode jika berbeda
        if (!barangDiterima[existingIndex].barcodes.includes(barcode)) {
          barangDiterima[existingIndex].barcodes.push(barcode);
          barangDiterima[existingIndex].barcode = barangDiterima[existingIndex].barcodes.join(', ');
        }
        
        // Update status
        updateStatusBarang(existingIndex);
      } else {
        // Hitung selisih
        const selisih = qty - qtySuratJalan;
        
        // Tentukan status awal
        let status = 'Belum dibandingkan';
        if (qtySuratJalan > 0) {
          if (qty === qtySuratJalan) {
            status = 'Sesuai';
          } else if (qty < qtySuratJalan) {
            status = 'Barang Kurang';
          } else {
            status = 'Barang Lebih';
          }
        } else if (qtySuratJalan === 0 && qty > 0) {
          status = 'Tidak ada di surat jalan';
        }
        
        // Tambahkan barang baru
        barangDiterima.push({
          barcode: barcode,
          barcodes: [barcode],
          nama: namaBarangAuto,
          qtyDiterima: qty,
          qtySuratJalan: qtySuratJalan,
          selisih: selisih,
          status: status
        });
      }
      
      // Update tabel
      updateTabelBarang();
      
      // Reset input
      document.getElementById('barcode').value = '';
      document.getElementById('namaBarangAuto').textContent = '-';
      document.getElementById('namaBarangAuto').style.color = '#666';
      document.getElementById('qtySuratJalanInfo').textContent = '-';
      document.getElementById('qtySuratJalanInfo').className = 'qty-info';
      document.getElementById('qty').value = '1';
      document.getElementById('barcode').focus();
    }
    
    // Fungsi untuk menghapus barang dari tabel
    function hapusBarang(index) {
      if (confirm("Apakah Anda yakin ingin menghapus barang ini?")) {
        barangDiterima.splice(index, 1);
        updateTabelBarang();
      }
    }
    
    // Fungsi untuk membuka modal edit
    function editBarang(index) {
      const barang = barangDiterima[index];
      document.getElementById('editIndex').value = index;
      document.getElementById('editBarcode').value = barang.barcode;
      document.getElementById('editNamaBarang').value = barang.nama;
      document.getElementById('editQty').value = barang.qtyDiterima;
      
      // Tampilkan modal
      openModal('editBarangModal');
    }
    
    // Fungsi untuk menyimpan hasil edit
    function simpanEdit() {
      const index = document.getElementById('editIndex').value;
      const qty = parseInt(document.getElementById('editQty').value);
      
      if (isNaN(qty) || qty <= 0) {
        alert('Masukkan quantity yang valid');
        return;
      }
      
      barangDiterima[index].qtyDiterima = qty;
      
      // Hitung ulang selisih
      barangDiterima[index].selisih = qty - barangDiterima[index].qtySuratJalan;
      
      // Update status
      updateStatusBarang(index);
      
      updateTabelBarang();
      closeModal('editBarangModal');
    }
    
    // Fungsi untuk update status barang setelah edit - DIPERBAIKI
    function updateStatusBarang(index) {
      const barang = barangDiterima[index];
      
      if (barang.qtySuratJalan === 0) {
        barang.status = 'Tidak ada di surat jalan';
      } else if (barang.qtyDiterima === barang.qtySuratJalan) {
        barang.status = 'Sesuai';
      } else if (barang.qtyDiterima < barang.qtySuratJalan) {
        barang.status = 'Barang Kurang';
      } else {
        barang.status = 'Barang Lebih';
      }
    }
    
    // Fungsi untuk update tabel barang
    function updateTabelBarang() {
      const tbody = document.getElementById('tabelBarangBody');
      tbody.innerHTML = '';
      
      barangDiterima.forEach((item, index) => {
        const row = document.createElement('tr');
        
        // Tentukan class selisih berdasarkan nilai
        let selisihClass = '';
        if (item.selisih > 0) {
          selisihClass = 'status-lebih';
        } else if (item.selisih < 0) {
          selisihClass = 'status-kurang';
        } else {
          selisihClass = 'status-sesuai';
        }
        
        // Tentukan class status
        let statusClass = '';
        if (item.status === 'Sesuai') {
          statusClass = 'status-sesuai';
        } else if (item.status === 'Barang Kurang') {
          statusClass = 'status-kurang';
        } else if (item.status === 'Barang Lebih') {
          statusClass = 'status-lebih';
        } else if (item.status === 'Tidak ada di surat jalan') {
          statusClass = 'status-tidak-ada';
        } else if (item.status === 'Belum diterima') {
          statusClass = 'status-belum-diterima';
        } else {
          statusClass = 'status-belum-diterima';
        }
        
        row.innerHTML = `
          <td>${item.barcode}</td>
          <td>${item.nama}</td>
          <td>${item.qtyDiterima}</td>
          <td>${item.qtySuratJalan}</td>
          <td class="${selisihClass}">${item.selisih}</td>
          <td class="${statusClass}">${item.status}</td>
          <td>
            <button onclick="editBarang(${index})" class="secondary">Edit</button>
            <button onclick="hapusBarang(${index})" class="danger">Hapus</button>
          </td>
        `;
        
        tbody.appendChild(row);
      });
    }
    
    // Fungsi untuk membandingkan dengan surat jalan berdasarkan NAMA BARANG
    function bandingkanDenganSuratJalan() {
      if (!suratJalanData || suratJalanData.length === 0) {
        alert('Upload surat jalan terlebih dahulu');
        return;
      }
      
      if (barangDiterima.length === 0) {
        alert('Tidak ada barang yang diterima');
        return;
      }
      
      showLoading();
      
      // Bandingkan dengan data surat jalan berdasarkan NAMA BARANG
      barangDiterima.forEach(item => {
        // Cari barang di surat jalan dengan nama yang sama (case insensitive)
        const barangSJ = suratJalanData.find(sj => 
          sj.nama.toLowerCase() === item.nama.toLowerCase()
        );
        
        if (barangSJ) {
          item.qtySuratJalan = parseInt(barangSJ.qty) || 0;
          item.selisih = item.qtyDiterima - item.qtySuratJalan;
          
          if (item.qtyDiterima === item.qtySuratJalan) {
            item.status = 'Sesuai';
          } else if (item.qtyDiterima < item.qtySuratJalan) {
            item.status = 'Barang Kurang';
          } else {
            item.status = 'Barang Lebih';
          }
        } else {
          item.qtySuratJalan = 0;
          item.selisih = item.qtyDiterima;
          item.status = 'Tidak ada di surat jalan';
        }
      });
      
      // Cek barang di surat jalan yang belum diterima (berdasarkan NAMA BARANG)
      suratJalanData.forEach(sj => {
        const sudahDiterima = barangDiterima.some(item => 
          item.nama.toLowerCase() === sj.nama.toLowerCase()
        );
        
        if (!sudahDiterima) {
          barangDiterima.push({
            barcode: sj.barcode || '-',
            barcodes: [sj.barcode || '-'],
            nama: sj.nama,
            qtyDiterima: 0,
            qtySuratJalan: parseInt(sj.qty) || 0,
            selisih: -parseInt(sj.qty) || 0,
            status: 'Belum diterima'
          });
        }
      });
      
      hideLoading();
      updateTabelBarang();
      
      // Tampilkan ringkasan hasil perbandingan
      tampilkanRingkasanPerbandingan();
    }
    
    // Fungsi untuk menampilkan ringkasan perbandingan
    function tampilkanRingkasanPerbandingan() {
      const sesuai = barangDiterima.filter(item => item.status === 'Sesuai').length;
      const kurang = barangDiterima.filter(item => item.status === 'Barang Kurang').length;
      const lebih = barangDiterima.filter(item => item.status === 'Barang Lebih').length;
      const tidakAda = barangDiterima.filter(item => item.status === 'Tidak ada di surat jalan').length;
      const belumDiterima = barangDiterima.filter(item => item.status === 'Belum diterima').length;
      
      document.getElementById('hasilPerbandingan').innerHTML = `
        <h3>Ringkasan Hasil Perbandingan:</h3>
        <div class="comparison-summary">
          <div class="summary-item summary-sesuai">
            <h4>Sesuai</h4>
            <p>${sesuai} item</p>
          </div>
          <div class="summary-item summary-kurang">
            <h4>Barang Kurang</h4>
            <p>${kurang} item</p>
          </div>
          <div class="summary-item summary-lebih">
            <h4>Barang Lebih</h4>
            <p>${lebih} item</p>
          </div>
          <div class="summary-item summary-tidak-ada">
            <h4>Tidak ada di SJ</h4>
            <p>${tidakAda} item</p>
          </div>
          ${belumDiterima > 0 ? `
          <div class="summary-item summary-belum-diterima">
            <h4>Belum Diterima</h4>
            <p>${belumDiterima} item</p>
          </div>
          ` : ''}
        </div>
      `;
    }
    
    // Fungsi untuk menyimpan data ke spreadsheet
    function simpanData() {
      if (barangDiterima.length === 0) {
        alert('Tidak ada data yang akan disimpan');
        return;
      }
      
      if (!nomorSuratJalan) {
        openModal('suratJalanModal');
        return;
      }
      
      showLoading();
      
      google.script.run
        .withSuccessHandler(function(response) {
          hideLoading();
          if (response.success) {
            alert('Data berhasil disimpan ke spreadsheet');
            // Reset data setelah disimpan
            resetData();
          } else {
            alert(response.message);
          }
        })
        .withFailureHandler(function(error) {
          hideLoading();
          alert('Error: ' + error.message);
        })
        .simpanKeSpreadsheet(nomorSuratJalan, barangDiterima);
    }
    
    // Fungsi untuk reset data
    function resetData() {
      barangDiterima = [];
      updateTabelBarang();
      document.getElementById('hasilPerbandingan').innerHTML = '';
      document.getElementById('barcode').value = '';
      document.getElementById('namaBarangAuto').textContent = '-';
      document.getElementById('namaBarangAuto').style.color = '#666';
      document.getElementById('qtySuratJalanInfo').textContent = '-';
      document.getElementById('qtySuratJalanInfo').className = 'qty-info';
      document.getElementById('qty').value = '1';
    }
    
    // Fungsi untuk membuka modal
    function openModal(modalId) {
      document.getElementById(modalId).style.display = 'block';
    }
    
    // Fungsi untuk menutup modal
    function closeModal(modalId) {
      document.getElementById(modalId).style.display = 'none';
    }
    
    // Fungsi untuk menyimpan surat jalan manual
    function simpanSuratJalanManual() {
      const nomor = document.getElementById('sjNomor').value.trim();
      const tanggal = document.getElementById('sjTanggal').value;
      
      if (!nomor || !tanggal) {
        alert('Isi semua field dengan benar');
        return;
      }
      
      nomorSuratJalan = nomor;
      closeModal('suratJalanModal');
      showSuccess('suratJalanStatus', `Surat jalan manual disimpan: ${nomor} - ${tanggal}`);
    }
    
    // Fungsi bantuan untuk menampilkan pesan
    function showError(elementId, message) {
      const element = document.getElementById(elementId);
      element.innerHTML = `<div class="error-message">${message}</div>`;
    }
    
    function showSuccess(elementId, message) {
      const element = document.getElementById(elementId);
      element.innerHTML = `<div class="success-message">${message}</div>`;
    }
    
    function showLoading() {
      document.getElementById('loading').style.display = 'flex';
    }
    
    function hideLoading() {
      document.getElementById('loading').style.display = 'none';
    }
  </script>
</body>
</html>
