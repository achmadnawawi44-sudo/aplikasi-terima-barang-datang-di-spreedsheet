        <input type="file" id="barangFile" accept=".csv,.xlsx,.xls" style="display: none;">
        <button onclick="document.getElementById('barangFile').click()">Pilih File</button>
        <div class="file-info" id="barangInfo"></div>
      </div>
      <button id="uploadBarangBtn" onclick="uploadDataBarang()" disabled>Upload Data Barang</button>
      <div id="barangStatus"></div>
    </div>
    
    <div class="section">
      <h2>Input Barang Manual</h2>
      <div class="form-group">
        <label for="barcode">Barcode:</label>
        <input type="text" id="barcode" placeholder="Scan barcode atau ketik manual" autocomplete="off">
      </div>
      
      <div class="form-group">
        <label>Nama Barang:</label>
        <div id="namaBarangAuto" class="nama-barang-auto">-</div>
